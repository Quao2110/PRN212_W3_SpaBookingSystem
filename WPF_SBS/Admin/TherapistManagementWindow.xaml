<Window x:Class="WPF_SBS.Admin.TherapistManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_SBS.Admin"
        mc:Ignorable="d"
        Title="Quản lý Chuyên viên" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Text="QUẢN LÝ CHUYÊN VIÊN" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       VerticalAlignment="Center"/>
            
            <Button x:Name="btnAddTherapist" 
                    Grid.Column="1" 
                    Content="+ Thêm chuyên viên" 
                    Padding="15,8"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderThickness="0"/>
        </Grid>

        <!-- Form thêm/sửa -->
        <GroupBox x:Name="gbNewTherapist" 
                  Grid.Row="1" 
                  Header="THÔNG TIN CHUYÊN VIÊN" 
                  Margin="0,10,0,10" 
                  Visibility="Collapsed">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="150"/>
                </Grid.ColumnDefinitions>

                <!-- Form fields -->
                <Grid Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Content="Username:" Margin="0,0,10,5"/>
                    <TextBox x:Name="txtUsername" Grid.Row="0" Grid.Column="1" Margin="0,0,20,5" Padding="5,3"/>

                    <Label Grid.Row="1" Grid.Column="0" Content="Password:" Margin="0,0,10,5"/>
                    <PasswordBox x:Name="txtPassword" Grid.Row="1" Grid.Column="1" Margin="0,0,20,5" Padding="5,3"/>

                    <Label Grid.Row="2" Grid.Column="0" Content="Họ và tên:" Margin="0,0,10,5"/>
                    <TextBox x:Name="txtFullName" Grid.Row="2" Grid.Column="1" Margin="0,0,20,5" Padding="5,3"/>

                    <Label Grid.Row="0" Grid.Column="2" Content="Số điện thoại:" Margin="0,0,10,5"/>
                    <TextBox x:Name="txtPhone" Grid.Row="0" Grid.Column="3" Margin="0,0,0,5" Padding="5,3"/>

                    <Label Grid.Row="1" Grid.Column="2" Content="Email:" Margin="0,0,10,5"/>
                    <TextBox x:Name="txtEmail" Grid.Row="1" Grid.Column="3" Margin="0,0,0,5" Padding="5,3"/>

                    <Label Grid.Row="2" Grid.Column="2" Content="Kinh nghiệm:" Margin="0,0,10,5"/>
                    <TextBox x:Name="txtExperience" Grid.Row="2" Grid.Column="3" Margin="0,0,0,5" Padding="5,3"/>

                    <Label Grid.Row="3" Grid.Column="0" Content="Mô tả:" Margin="0,0,10,5"/>
                    <TextBox x:Name="txtDescription" 
                             Grid.Row="3" 
                             Grid.Column="1" 
                             Grid.ColumnSpan="3"
                             Height="60" 
                             Margin="0,0,0,10"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             Padding="5"/>

                    <!-- Buttons -->
                    <StackPanel Grid.Row="4" 
                              Grid.Column="1"
                              Grid.ColumnSpan="3" 
                              Orientation="Horizontal" 
                              HorizontalAlignment="Right" 
                              Margin="0,10,0,0">
                        <Button x:Name="btnSave" 
                                Content="Lưu" 
                                Width="100" 
                                Height="30"
                                Margin="0,0,10,0"
                                Background="#2196F3"
                                Foreground="White"
                                BorderThickness="0"/>
                        <Button x:Name="btnCancel" 
                                Content="Hủy" 
                                Width="100" 
                                Height="30"
                                Background="#F44336"
                                Foreground="White"
                                BorderThickness="0"/>
                    </StackPanel>
                </Grid>

                <!-- Image upload -->
                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <TextBlock Text="Hình ảnh" 
                              FontWeight="Bold" 
                              HorizontalAlignment="Center"
                              Margin="0,0,0,10"/>
                    <Border Width="120" 
                            Height="120" 
                            BorderBrush="#DDDDDD" 
                            BorderThickness="1" 
                            Margin="0,0,0,10">
                        <Image x:Name="imgTherapist" Stretch="UniformToFill"/>
                    </Border>
                    <Button x:Name="btnChooseFile" 
                            Content="Chọn ảnh" 
                            Padding="10,5"
                            Background="#607D8B"
                            Foreground="White"
                            BorderThickness="0"/>
                    <TextBlock x:Name="txtFileName" 
                              Text="Chưa chọn ảnh" 
                              TextAlignment="Center"
                              TextWrapping="Wrap"
                              Margin="0,5,0,0"
                              Foreground="#666666"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- DataGrid -->
        <DataGrid x:Name="dgTherapists" 
                  Grid.Row="2" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  SelectionMode="Single"
                  BorderThickness="1"
                  BorderBrush="#DDDDDD"
                  RowHeaderWidth="0"
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Auto"
                  Background="White"
                  AlternatingRowBackground="#F5F5F5"
                  HorizontalContentAlignment="Center">
            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#2196F3"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Padding" Value="10,5"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                <DataGridTextColumn Header="USERNAME" Binding="{Binding Username}" Width="Auto"/>
                <DataGridTextColumn Header="HỌ VÀ TÊN" Binding="{Binding FullName}" Width="Auto"/>
                <DataGridTextColumn Header="SỐ ĐIỆN THOẠI" Binding="{Binding Phone}" Width="Auto"/>
                <DataGridTextColumn Header="EMAIL" Binding="{Binding Email}" Width="Auto"/>
                <DataGridTextColumn Header="KINH NGHIỆM" Binding="{Binding Experience}" Width="Auto"/>
                <DataGridTextColumn Header="MÔ TẢ" Binding="{Binding Description}" Width="400"/>
                <DataGridTemplateColumn Header="ẢNH" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border Width="60" Height="60" CornerRadius="30" Background="#F5F5F5" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Image Source="{Binding Image}" Width="56" Height="56" Stretch="UniformToFill" ClipToBounds="True"/>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="THAO TÁC" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Sửa" 
                                        Click="btnEdit_Click"
                                        Margin="0,0,5,0"
                                        Padding="10,3"
                                        Background="#FFC107"
                                        Foreground="White"
                                        BorderThickness="0"/>
                                <Button Content="Xóa" 
                                        Click="btnDelete_Click"
                                        Padding="10,3"
                                        Background="#F44336"
                                        Foreground="White"
                                        BorderThickness="0"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>